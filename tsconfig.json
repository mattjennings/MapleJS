{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2015", "esnext"],
    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "@util/*": [
        "src/util/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@config/*": [
        "config/*"
      ]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}