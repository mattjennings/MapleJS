{
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": [
    "prettier",
    "json"
  ],
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "no-var":"error",
    "no-console": "off",
    "prefer-const": "error",
    "eol-last": "off",
    "prettier/prettier": ["error", {
      "printWidth": 80,
      "tabWidth": 2,
      "singleQuote": true,
      "trailingComma": "none",
      "semi": false
    }]
  },
  "globals": {
    "Int64": true,
    "ServerConfig": true
  }
}